generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String          @id @default(uuid())
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
  name                    String          @default("User")
  email                   String          @unique
  password                String
  phone                   String?
  role                    Role            @default(USER)
  qualifications          Json[]
  publications            Json[]
  about                   String?
  attendance              Attendance[]
  departmentId            Int?
  isApproved              Boolean?        @default(false)
  department              Department?     @relation(fields: [departmentId], references: [id])
  supervisingDepartmentId Int?
  supervisingDepartment   Department?     @relation("DepartmentSuperviser")
  leaveRequests           LeaveRequest[]
  leaveApprovals          LeaveApproval[]
}

enum Role {
  USER
  ADMIN
}

model Attendance {
  id       String           @id @default(uuid())
  userId   String
  status   AttendanceStatus
  date     DateTime         @db.Date
  time_in  DateTime?
  time_out DateTime?
  user     User             @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LEAVE
}

model Department {
  id           Int          @id @default(autoincrement())
  name         String
  type         TeachingType
  user         User[]
  superviserId String?      @unique
  superviser   User?        @relation("DepartmentSuperviser", fields: [superviserId], references: [id])
  createdAt    DateTime     @default(now())
}

enum TeachingType {
  TEACHING
  NONTEACHING
}

model LeaveRequest {
  id        Int            @id @default(autoincrement())
  LeaveType String
  StartDate DateTime
  EndDate   DateTime
  status    String
  leaveType LeaveStatus
  userId    String
  user      User           @relation(fields: [userId], references: [id])
  approval  LeaveApproval?
  createdAt DateTime       @default(now())
}

model LeaveApproval {
  id             Int    @id @default(autoincrement())
  supervisorId   String
  leaveRequestId Int    @unique
  supervisor     User   @relation(fields: [supervisorId], references: [id])

  leaveRequest LeaveRequest @relation(fields: [leaveRequestId], references: [id])
}

enum LeaveStatus {
  PENDING
  APPROVED
  DENIED
}
