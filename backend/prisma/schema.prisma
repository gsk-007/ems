generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String          @id @default(uuid())
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
  name                    String          @default("User")
  email                   String          @unique
  password                String
  phone                   String?
  role                    Role            @default(USER)
  qualifications          Json[]
  publications            Json[]
  about                   String?
  attendance              Attendance[]
  departmentId            Int?
  isApproved              Boolean?        @default(false)
  department              Department?     @relation(fields: [departmentId], references: [id], onDelete: NoAction)
  supervisingDepartmentId Int?
  supervisingDepartment   Department?     @relation("DepartmentSupervisor")
  leaveTypes              UserLeaveType[]
  leaveRequests           LeaveRequest[]
  leaveApprovals          LeaveApproval[]
}

enum Role {
  USER
  ADMIN
}

model Attendance {
  id       String           @id @default(uuid())
  userId   String
  status   AttendanceStatus
  date     DateTime         @db.Date
  time_in  DateTime?
  time_out DateTime?
  user     User             @relation(fields: [userId], references: [id], onDelete: NoAction)

  @@unique([userId, date])
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LEAVE
}

model Department {
  id           Int          @id @default(autoincrement())
  name         String
  type         TeachingType
  user         User[]
  supervisorId String?      @unique
  supervisor   User?        @relation("DepartmentSupervisor", fields: [supervisorId], references: [id], onDelete: NoAction)
  createdAt    DateTime     @default(now())
}

enum TeachingType {
  TEACHING
  NONTEACHING
}

model LeaveType {
  id       Int             @id @default(autoincrement())
  type     String
  maxLimit Int?
  count    Int             @default(0)
  users    UserLeaveType[]
}

model UserLeaveType {
  id           Int            @id @default(autoincrement())
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  leaveType    LeaveType      @relation(fields: [leaveTypeId], references: [id])
  leaveTypeId  Int
  leaveCount   Int            @default(0)
  LeaveRequest LeaveRequest[]
}

model LeaveRequest {
  id          Int            @id @unique @default(autoincrement())
  StartDate   DateTime       @db.Date
  EndDate     DateTime       @db.Date
  reason      String
  status      LeaveStatus    @default(PENDING)
  leaveTypeId Int
  leaveType   UserLeaveType  @relation(fields: [leaveTypeId], references: [id], onDelete: Cascade)
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: NoAction)
  approval    LeaveApproval?
  documents   String[]
  createdAt   DateTime       @default(now())
}

model LeaveApproval {
  id             Int          @id @default(autoincrement())
  supervisorId   String
  leaveRequestId Int          @unique
  supervisor     User         @relation(fields: [supervisorId], references: [id], onDelete: NoAction)
  leaveRequest   LeaveRequest @relation(fields: [leaveRequestId], references: [id], onDelete: Cascade)
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}
